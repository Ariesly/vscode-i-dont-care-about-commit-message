{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "automergeType": "branch",
  "lockFileMaintenance": {
    "automerge": true
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "packageRules": [
    {
      "automerge": true,
      "extends": [
        "packages:linters"
      ]
    }
  ]
}
